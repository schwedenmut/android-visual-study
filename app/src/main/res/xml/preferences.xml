        <Preference
                android:key="screencapture_entries"
                android:title="Screencaptures logged"
                android:summary="0"
                android:enabled="false" />

        <Preference
                android:key="pref_version"
                android:title="Version"
                android:summary="0"
                android:enabled="false" />
    </PreferenceCategory>

</PreferenceScreen>
